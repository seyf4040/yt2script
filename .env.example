# OPENAI_API_KEY=sk-your-actual-api-key
# APP_PASSWORD=your-secure-password
# API_URL=http://localhost:8080
# PORT=8080

# ========== OpenAI Configuration ==========
OPENAI_API_KEY=sk-your-actual-api-key
CLEANING_MODEL=gpt-4o-mini

# ========== Application Configuration ==========
API_URL=http://localhost:8080
PORT=8080
APP_NAME=YouTube Transcription Tool
APP_URL=http://localhost:8501

# ========== Security Configuration ==========
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-for-sessions-min-32-chars

# For production with HTTPS
SESSION_COOKIE_SECURE=False

# ========== Email Configuration (SMTP) ==========
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
# For Office365: Use your regular password or app password

# Gmail Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Alternative: Office365
# SMTP_SERVER=smtp.office365.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@company.com
# SMTP_PASSWORD=your-password

# Alternative: Custom SMTP
# SMTP_SERVER=mail.yourserver.com
# SMTP_PORT=587
# SMTP_USERNAME=your-username
# SMTP_PASSWORD=your-password

# Email sender address (defaults to SMTP_USERNAME)
EMAIL_FROM=noreply@yourapp.com

# ========== Admin Configuration ==========
# Set during migration - do NOT put passwords in .env in production!
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=changeme-on-first-login